{% extends "base.html" %}

{% block head %}
{{ super() }}
<style>
  .container-canvas {
    margin: 0 auto;
    width: 800px;
  }

  canvas {
    border: 1px solid #333;
  }
</style>
{% endblock %}

{% block content %}
<div class="row" id="mapName" style="margin-left:20px"></div>
<div class="row" id="personName" style="margin-left:40px"><p>by {{user.first}} {{user.last}}</p></div>
<hr>
<div class="container-fluid">
  {% if mapping %}
  <div class="row-fluid" id="show-canvas">
    <div class="span8" id="div-canvas">
      <canvas id="mapping-canvas"></canvas>
    </div>
    <div class="span4" style="background-color:#dceaf4">
      <div class="container-fluid">
        <div id="show-mapping-sidebar"></div>
      </div>
    </div>
  </div>
  {% endif %}
  <div class="row-fluid" id="dont-canvas">
    <div id="dont-mapping-sidebar"></div>
  </div>
</div>
{% endblock %}

{%  block footer %}
{{ super() }}
<script src="/static/js/user_mapping.js" onload="showMappingVisualization({{mapping}}, {{mname}}, {{show_canvas}})"></script>
{% endblock %}
